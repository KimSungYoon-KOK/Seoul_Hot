<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:text="This is Title"
                    android:textColor="@color/black"
            />
            <TextView
                    android:id="@+id/writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hsoh0306"
                    android:layout_marginVertical="5dp"
            />

            <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is Content"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
        >
            <ToggleButton
                    android:id="@+id/heart"
                    android:textOff=""
                    android:textOn=""
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/toggle_selector_heart"
            />

            <TextView
                    android:text="0"
                    android:layout_margin="5dp"
                    android:id="@+id/likes"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_bookmark_black"
                    android:id="@+id/scrapBtn"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:lyaout_marginLeft="7dp"/>

        </LinearLayout>

    </RelativeLayout>
    <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/item_img"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ripple_effect_2"
    />
    <TextView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/layout_back"
            android:alpha="0.2"
    />
</LinearLayout>
