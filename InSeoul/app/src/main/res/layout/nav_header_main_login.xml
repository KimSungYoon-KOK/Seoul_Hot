<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:gravity="center_horizontal"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
        >
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:contentDescription="@string/nav_header_desc"
                    android:id="@+id/imageView"
                    android:layout_margin="15dp"
                    android:src="@drawable/profile"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:text="회원 이름"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일정을 생성하고 관리하세요"
                        android:linksClickable="true"
                        android:id="@+id/tv_plan_count"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
        >
            <Button
                    android:id="@+id/myPage_on"
                    android:text="마이페이지"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_style"
                    android:clickable="true"
            />
            <Button
                    android:id="@+id/faq_on"
                    android:text="FAQ"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_style"
                    android:clickable="true"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
            />
            <Button
                    android:id="@+id/login_status_on"
                    android:text="로그 아웃"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_style"
                    android:clickable="true"
            />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/c7">
    </LinearLayout>



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="미세먼지"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
        />
        <kr.go.seoul.airquality.AirQualityTypeMini
                android:id="@+id/type_mini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </LinearLayout>

</LinearLayout>
