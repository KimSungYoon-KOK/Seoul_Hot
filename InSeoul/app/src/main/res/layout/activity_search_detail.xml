<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".search.SearchDetail"
        android:background="@color/white"
>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_background"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_search_details"
            android:fitsSystemWindows="true"
    >
            <ImageButton
                    android:id="@+id/add_my_list"
                    android:layout_marginVertical="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_bookmark"
                    android:background="@color/invisible"
                    android:layout_gravity="right"
            />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
        >
            <ImageView
                    android:id="@+id/no_image"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/no_image"
                    android:visibility="invisible"
            />

            <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/detail_image_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:id="@+id/detail_title"
                            android:layout_margin="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="22dp"
                            android:text="피나치공"
                            android:textStyle="bold"
                            android:textColor="@color/white"

                    />
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="5dp"
                    >
                        <ImageButton
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/previous"
                                android:id="@+id/previous"
                                android:background="@color/invisible"
                                android:layout_margin="5dp"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:id="@+id/img_num"
                                android:text="1/6"
                                android:layout_gravity="center_vertical"
                        />

                        <ImageButton
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/next"
                                android:id="@+id/next"
                                android:layout_margin="5dp"
                                android:background="@color/invisible"
                        />

                    </LinearLayout>
                </LinearLayout>
                <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/detail_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                />
            </LinearLayout>

        </RelativeLayout>
        <TextView
                android:text="데이터 제공 : 한국관광공사, Visit Seoul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
        />
        <TextView
                android:text="#"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_type"
                android:textColor="@color/black"
        />
        <TextView
                android:text="주소"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_address"
                android:textColor="@color/black"
        />
        <TextView
                android:text="전화 번호"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_tel"
                android:textColor="@color/black"
        />
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/detail_map"
                  android:layout_height="200dp"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
        />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>