<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:map="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>
    <ImageButton
            android:id="@+id/bottomSheet_btn"
            android:src="@drawable/ic_down_arrow_black"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/invisible"
    />

    <TextView
            android:text="More Info"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="20dp"
    />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bottom_sheet_map"
              android:layout_height="200dp"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
    >

        <ImageView
                android:src="@drawable/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
        />
        <TextView
                android:id="@+id/location"
                android:text="03036 서울 종로구 자하문로15길 18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
    >

        <ImageView
                android:src="@drawable/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
        />
        <TextView
                android:id="@+id/call"
                android:text="02-722-0911"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
    >
        <ImageView
                android:src="@drawable/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"

        />
        <TextView
                android:id="@+id/like"
                android:text="3k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
        />
        <ImageView
                android:src="@drawable/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
        />
        <TextView
                android:id="@+id/dislike"
                android:text="324"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
        />
    </LinearLayout>

</LinearLayout>
