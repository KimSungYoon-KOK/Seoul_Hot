<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">


    <TextView
            android:id="@+id/textview_title_past"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="여행 제목"
            app:layout_constraintRight_toLeftOf="@+id/textview_date_past"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_weight="2"/>


    <TextView
            android:id="@+id/textview_date_past"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:gravity="center"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/textview_title_past"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_recyclerview_btn_past"
            android:layout_marginEnd="8dp" android:layout_weight="1"/>
    <Button
            android:text="리뷰 작성"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_recyclerview_btn_past"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textview_date_past"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" android:layout_weight="1"/>


</LinearLayout>