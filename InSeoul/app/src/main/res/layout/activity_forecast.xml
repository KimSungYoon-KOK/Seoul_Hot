<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forecast.ForecastActivity">
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

    >

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbar_background"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar_forecast"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
        >
            <TextView
                    android:text="지금 서울의 날씨는 "
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
            >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"

                >
                    <ImageView
                            android:id="@+id/t_weather_icon"
                            android:src="@drawable/w_rain"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                    />
                    <TextView
                            android:text="9월10일"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:id="@+id/t_date"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                    />
                    <TextView
                            android:text="비"
                            android:textSize="20dp"
                            android:id="@+id/t_status"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="24℃"
                            android:textSize="24dp"
                            android:id="@+id/today_temp_high"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="24℃"
                            android:textSize="24dp"
                            android:id="@+id/today_temp_low"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"

                >
                    <ImageView
                            android:id="@+id/tt_weather_icon"
                            android:src="@drawable/w_rain"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                    />
                    <TextView
                            android:text="9월10일"
                            android:textSize="18dp"
                            android:id="@+id/tt_date"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="비"
                            android:textSize="16dp"
                            android:id="@+id/tt_status"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="24℃"
                            android:textSize="20dp"
                            android:id="@+id/tt_temp_high"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="24℃"
                            android:textSize="20dp"
                            android:id="@+id/tt_temp_low"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                >
                    <ImageView
                            android:id="@+id/ttt_weather_icon"
                            android:src="@drawable/w_rain"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                    />
                    <TextView
                            android:text="9월10일"
                            android:textSize="18dp"
                            android:id="@+id/ttt_date"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="비"
                            android:textSize="16dp"
                            android:id="@+id/ttt_status"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="24℃"
                            android:textSize="20dp"
                            android:id="@+id/ttt_temp_high"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:text="24℃"
                            android:textSize="20dp"
                            android:id="@+id/ttt_temp_low"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
